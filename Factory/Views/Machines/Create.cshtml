@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class="box" id="machines">
  <div class="title">
    <img src="~/img/Documents Folder.ico" width="25" height="25" class="title" />
    <p class="title">Add Machine</p>
    <button>@Html.ActionLink("X","Index", "Home")</button>
    <button>?</button>
  </div>
  <div class="content">
    @using (Html.BeginForm())
    {
      @Html.LabelFor(model => model.Type)
      @Html.TextBoxFor(model => model.Type, new {required="required"})
      <input type="submit" value="Add" class="button" />
    }
  </div>
</div>