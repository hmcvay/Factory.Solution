@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class="box" id="machines">
  <div class="title">
    <img src="~/img/Documents Folder.ico" width="25" height="25" class="title" />
    <p class="title">Add Engineer</p>
    <button>X</button>
    <button>?</button>
  </div>
  <div class="content">
    <h4> Add Engineer to @Html.DisplayFor(model => model.Type)</h4>

    @using (Html.BeginForm())
    {
      @Html.HiddenFor(model => model.MachineId)

      @Html.Label("Assign Engineer")
      @Html.DropDownList("EngineerId")

      <input type="submit" value="Save" />
    }

    <button>@Html.ActionLink("All machines", "Index")</button>
  </div>
</div>